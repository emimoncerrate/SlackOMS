# Jain Global Slack Trading Bot - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# SLACK CONFIGURATION (Required)
# =============================================================================
# Get these from your Slack App at https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here

# Optional: For Socket Mode development (not needed for Render deployment)
# SLACK_APP_TOKEN=xapp-your-app-token-here

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================
# For local development (SQLite)
# DATABASE_URL=sqlite:///./jain_trading_bot.db

# For Render deployment (PostgreSQL - auto-provided by Render)
# DATABASE_URL=postgresql://user:password@host:port/database

# For local PostgreSQL testing
DATABASE_URL=postgresql://localhost:5432/jain_trading_bot

# Database connection tuning (optional)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=true
DB_ECHO_SQL=false

# =============================================================================
# MARKET DATA API (Required)
# =============================================================================
# Get free API key from https://finnhub.io
FINNHUB_API_KEY=your-finnhub-api-key-here

# Optional: Finnhub configuration
FINNHUB_BASE_URL=https://finnhub.io/api/v1
MARKET_DATA_CACHE_TTL=60
MARKET_DATA_RATE_LIMIT=60
MARKET_DATA_TIMEOUT=10

# =============================================================================
# TRADING API (Required)
# =============================================================================
# Get free paper trading account from https://alpaca.markets
ALPACA_API_KEY=your-alpaca-api-key-here
ALPACA_SECRET_KEY=your-alpaca-secret-key-here

# Alpaca configuration (paper trading by default)
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Server configuration
HOST=0.0.0.0
PORT=8080

# Logging
LOG_LEVEL=INFO
DEBUG_MODE=true

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Trading limits and settings
MOCK_EXECUTION_ENABLED=false
EXECUTION_DELAY_SECONDS=1.0
MAX_POSITION_SIZE=10000
MAX_TRADE_VALUE=1000000.0

# Supported symbols (comma-separated)
SUPPORTED_SYMBOLS=AAPL,GOOGL,MSFT,AMZN,TSLA,META,NVDA,NFLX,SPY,QQQ

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Approved Slack channels (comma-separated channel IDs)
# Leave empty to allow all channels
APPROVED_CHANNELS=

# Session and security settings
SESSION_TIMEOUT_MINUTES=480
MAX_FAILED_ATTEMPTS=5
AUDIT_LOG_RETENTION_DAYS=2555

# =============================================================================
# OPTIONAL: ADVANCED CONFIGURATION
# =============================================================================
# Application metadata
APP_NAME=Jain Global Slack Trading Bot
APP_VERSION=1.0.0

# Performance tuning
RATE_LIMIT_PER_MINUTE=100
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Monitoring and observability
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30