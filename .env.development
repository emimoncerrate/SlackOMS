# Jain Global Slack Trading Bot - Development Environment
# This file contains safe development defaults

# =============================================================================
# SLACK CONFIGURATION (Required - Replace with your values)
# =============================================================================
SLACK_BOT_TOKEN=xoxb-replace-with-your-bot-token
SLACK_SIGNING_SECRET=replace-with-your-signing-secret

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite for local development (no setup required)
DATABASE_URL=sqlite:///./jain_trading_bot.db

# Database settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=true
DB_ECHO_SQL=true

# =============================================================================
# MARKET DATA API (Required - Get free key from finnhub.io)
# =============================================================================
FINNHUB_API_KEY=replace-with-your-finnhub-key

# Finnhub settings
FINNHUB_BASE_URL=https://finnhub.io/api/v1
MARKET_DATA_CACHE_TTL=60
MARKET_DATA_RATE_LIMIT=60
MARKET_DATA_TIMEOUT=10

# =============================================================================
# TRADING API (Required - Get free paper account from alpaca.markets)
# =============================================================================
ALPACA_API_KEY=replace-with-your-alpaca-key
ALPACA_SECRET_KEY=replace-with-your-alpaca-secret

# Alpaca settings (paper trading)
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8080
LOG_LEVEL=DEBUG
DEBUG_MODE=true

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
MOCK_EXECUTION_ENABLED=false
EXECUTION_DELAY_SECONDS=1.0
MAX_POSITION_SIZE=1000
MAX_TRADE_VALUE=100000.0
SUPPORTED_SYMBOLS=AAPL,GOOGL,MSFT,AMZN,TSLA,META,NVDA,NFLX

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
APPROVED_CHANNELS=
SESSION_TIMEOUT_MINUTES=480
MAX_FAILED_ATTEMPTS=5
AUDIT_LOG_RETENTION_DAYS=90

# =============================================================================
# APPLICATION METADATA
# =============================================================================
APP_NAME=Jain Global Slack Trading Bot
APP_VERSION=1.0.0